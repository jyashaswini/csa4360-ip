<body>
    <header>
        <h1>Your E-commerce Store</h1>
    </header>

    <nav>
        <input type=”text” placeholder=”Search products”>
        <button>Search</button>

        <ul>
            <li><a href=”#”>Home</a></li>
            <li><a href=”#”>Products</a></li>
            <li><a href=”#” onclick=”showCart()”>Cart</a></li>
            <li><a href=”#”>Contact</a></li>
        </ul>
    </nav>

    <section>
        <h2>Categories</h2>

        <div class=”category” onclick=”filterProducts(‘all’)”>All</div>
        <div class=”category” onclick=”filterProducts(‘electronics’)”>Electronics</div>
        <div class=”category” onclick=”filterProducts(‘clothing’)”>Clothing</div>
        <div class=”category” onclick=”filterProducts(‘accessories’)”>Accessories</div>

        <h2>Featured Products</h2>

        <div class=”product electronics” data-name=”Product 1” data-price=”20”>
            <h3>Product 1</h3>
            <p>Description of Product 1.</p>
            <img src=”product1.jpg” alt=”Product 1 Image”>
            <p>Price: $20.00</p>
            <button onclick=”addToCart(‘Product 1’, 20)”>Add to Cart</button>
        </div>

        <div class=”product clothing” data-name=”Product 2” data-price=”30”>
            <h3>Product 2</h3>
            <p>Description of Product 2.</p>
            <img src=”product2.jpg” alt=”Product 2 Image”>
            <p>Price: $30.00</p>
            <button onclick=”addToCart(‘Product 2’, 30)”>Add to Cart</button>
        </div>

        <!—Add more product entries as needed 

    </section>

    <div class=”cart” style=”display: none;” id=”cart”>
        <h2>Shopping Cart</h2>
        <ul id=”cart-items”></ul>
        <p>Total: $<span id=”cart-total”>0.00</span></p>
        <button onclick=”clearCart()”>Clear Cart</button>
    </div>

    <footer>
        <p>&copy; 2023 Your E-commerce Store. All rights reserved.</p>
    </footer>

    <script>
        Let cartItems = [];

        Function filterProducts(category) {
            Const products = document.querySelectorAll(‘.product’);
            Products.forEach(product => {
                If (category === ‘all’ || product.classList.contains(category)) {
                    Product.style.display = ‘inline-block’;
                } else {
                    Product.style.display = ‘none’;
                }
            });
        }

        Function showCart() {
            Const cart = document.getElementById(‘cart’);
            Cart.style.display = ‘block’;
            updateCartView();
        }

        Function addToCart(name, price) {
            cartItems.push({ name, price });
            updateCartView();
        }

        Function updateCartView() {
            Const cartItemsElement = document.getElementById(‘cart-items’);
            Const cartTotalElement = document.getElementById(‘cart-total’);

            cartItemsElement.innerHTML = ‘’;
            let total = 0;

            cartItems.forEach(item => {
                const listItem = document.createElement(‘li’);
                listItem.textContent = `${item.name} - $${item.price.toFixed(2)}`;
                cartItemsElement.appendChild(listItem);

                total += item.price;
            });

            cartTotalElement.textContent = total.toFixed(2);
        }

        Function clearCart() {
            cartItems = [];
            updateCartView();
            const cart = document.getElementById(‘cart’);
            cart.style.display = ‘none’;
        }
    </script>
</body>

</html>
